<h2>Mude a sua senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form ui' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nova Senha" %>
    <% if @minimum_password_length %>
      <em>(A senha possui mÃ­nimo de: <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme nova senha" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Mudar minha senha" , class: 'ui button teal' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
