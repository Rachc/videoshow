<h3 class="ui center aligned icon header">
  <i class="circular circular user icon teal"></i>
  Cadastro
</h3>

<div class="ui two column centered grid">
  <div class="column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :password, 'Senha' %>
        <% if @minimum_password_length %>
        <em>(O tamanho mínimo de senha é: <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirmação de senha' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar" , class: 'ui button teal' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
