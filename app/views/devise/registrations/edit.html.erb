<h3 class="ui center aligned icon header">
  <i class="circular circular user icon teal"></i>
  Editar sua conta
</h3>

<div class="ui divider"></div>

<div class="ui two column centered grid">
  <div class="column">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'ui form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, 'Nova Senha' %> <i>(Deixe em branco caso não queira mudar)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>Tamanho mínimo de senha: <%= @minimum_password_length %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirmação de Senha' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, 'Senha Atual' %> <i>(Precisamos da sua senha atual para modificar sua conta)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Salvar", class: 'ui button teal' %>
      </div>
    <% end %>
  </div>
</div>
